# Import the time module to get the current system time
import time

# Get current time in HH:MM:SS format (not used here, but can be printed if needed)
current_time = time.strftime("%H:%M:%S")
print("Current time:", current_time)

# Ask the user to enter the hour (0-23)
hour = int(input("Enter hour (0-23): "))
print("You entered hour:", hour)

# Check the time and print an appropriate greeting
if hour >= 0 and hour < 12:
    print("Good Morning Sir!")
elif hour >= 12 and hour < 17:
    print("Good Afternoon Sir!")
else:
    # Covers hours from 17 to 23
    print("Good Night Sir!")
